<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.example.socialnetwork.ui.editProfile.EditProfileFragmentViewModel" />
    </data>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/green"
                    android:gravity="center"
                    android:text="Edit Profile"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="@color/white" />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/baseline_arrow_back_24"
                    android:tint="@color/white"
                    android:layout_marginStart="4dp"
                    android:onClick="@{(v)->viewModel.onBackPressed()}"
                    />
            </RelativeLayout>

            <EditText
                android:id="@+id/etName"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:text="@={viewModel.name}"
                android:layout_marginBottom="16dp"
                android:padding="12dp"
                android:background="@drawable/edit_text_background" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="email@domain.com"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:text="@={viewModel.email}"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edit_text_background" />

            <EditText
                android:id="@+id/etBio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Bio"
                android:padding="12dp"
                android:text="@={viewModel.bio}"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edit_text_background" />

            <EditText
                android:id="@+id/etCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="City"
                android:padding="12dp"
                android:text="@={viewModel.city}"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edit_text_background" />

            <Button
                android:id="@+id/btn_create"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="edit"
                android:textColor="@android:color/white"
                android:onClick="@{() -> viewModel.edit()}"
                android:background="@drawable/button_background"
                android:layout_marginBottom="16dp" />
        </LinearLayout>
</layout>
